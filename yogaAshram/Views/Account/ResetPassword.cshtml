
@model ResetPasswordViewModel

@{
    ViewBag.Title = "Восстановление пароля";
    Layout = "_Layout";
}

<div class="container">
    <div class="card" style="width:800px;margin:auto;">
        <div class="card-header text-center">
            Восстановление пароля
        </div>
        <div class="card-body">
            <form asp-action="ResetPassword"  asp-controller="Account" method="post" asp-antiforgery="true" style="position:relative;">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Email">
                    <input type="hidden" asp-for="Token">
                    <label>Введите новый пароль <span class="text-danger">*</span></label>
                    <input class="form-control" asp-for="Password">
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label>Введите новый пароль еще раз <span class="text-danger">*</span></label>
                    <input class="form-control" asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                <button type="submit" class="btn btn-secondary mt-3">Создать</button>
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
