
@model ForgotPasswordViewModel

@{
    ViewBag.Title = "Восстановление пароля";
    Layout = "_Layout";
}

<div class="container">
    <div class="card" style="width:800px;margin:auto;">
        <div class="card-header text-center">
            Восстановление пароля
        </div>
        <div class="card-body">
            <form asp-action="ForgotPassword"  asp-controller="Account" method="post" asp-antiforgery="true" style="position:relative;">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label>Введите эл. почту <span class="text-danger">*</span></label>
                    <input class="form-control" asp-for="Email">
                    <span asp-validation-for="Email"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Восстановить</button>
            </form>
        </div>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}